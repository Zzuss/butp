# 生产环境配置模板 - CAS认证系统
# 复制此文件为 .env.local 并填入正确的配置值

# 运行环境
NODE_ENV=production

# 网站配置
NEXT_PUBLIC_SITE_URL=https://butp.tech

# CAS认证模式 (real: 使用真实北邮CAS, mock: 使用模拟CAS)
CAS_MODE=real

# Session密钥 (生产环境请生成安全的随机密钥)
SESSION_SECRET_KEY=butp-production-secret-key-2024-cas-auth-very-secure-random-string

# ===== 数据库配置 =====
# 选择一种数据库配置方式

# 选项1: Supabase PostgreSQL (当前默认，但连接不稳定)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# 选项2: MySQL云数据库 (推荐，更稳定)
# MYSQL_HOST=your-mysql-host.com
# MYSQL_PORT=3306
# MYSQL_USER=your-mysql-username
# MYSQL_PASSWORD=your-mysql-password
# MYSQL_DATABASE=your-database-name

# 构建优化
NEXT_DISABLE_WASM=true

# ===== Umami Analytics 配置 =====
# 两种配置方式：Supabase版本 或 MySQL版本

# 当前 Umami (Supabase版本 - 不稳定)
NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://umami-mysql-mauve.vercel.app/script.js
NEXT_PUBLIC_UMAMI_WEBSITE_ID=4bd87e19-b721-41e5-9de5-0c694e046425
UMAMI_BASE_URL=https://umami-mysql-mauve.vercel.app
NEXT_PUBLIC_UMAMI_USERNAME=admin
NEXT_PUBLIC_UMAMI_PASSWORD=umami

# 新 Umami (MySQL版本 - 推荐)
# 部署新的Umami实例到Vercel，使用MySQL数据库
# NEXT_PUBLIC_UMAMI_SCRIPT_URL=https://your-new-umami.vercel.app/script.js
# NEXT_PUBLIC_UMAMI_WEBSITE_ID=your-new-website-id
# UMAMI_BASE_URL=https://your-new-umami.vercel.app
# NEXT_PUBLIC_UMAMI_USERNAME=admin
# NEXT_PUBLIC_UMAMI_PASSWORD=your-password

# 分析功能开关
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# 其他开发设置
NEXT_PUBLIC_DEBUG_MODE=false 