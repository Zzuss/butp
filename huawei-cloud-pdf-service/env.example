# 华为云PDF服务环境配置

# 服务配置
NODE_ENV=production
PORT=3000

# API安全
PDF_SERVICE_KEY=huawei-pdf-2024-your-secure-key-here

# Puppeteer配置
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# 日志级别
LOG_LEVEL=info

# Redis配置（如果启用）
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=huawei-redis-2024

# 监控配置
ENABLE_MONITORING=true

# 域名配置
DOMAIN=pdf.butp.tech

# SSL证书路径
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 华为云配置（可选）
HUAWEI_CLOUD_ACCESS_KEY=your-access-key
HUAWEI_CLOUD_SECRET_KEY=your-secret-key
HUAWEI_CLOUD_REGION=cn-north-4
